<%= form_for :sessions, :url => {:action=> "create", :controller=>"sessions" } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :uname %>
      <%= f.label :password %>
      <%= f.password_field :pwd %>
      <%= f.submit "submit" %>
 <% end %>

 <%= form_for :user, :url => {:action=> "new", :controller=>"users" } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :uname %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :password %>
      <%= f.password_field :pwd %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "submit" %>
 <% end %>